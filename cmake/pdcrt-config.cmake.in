set(PDCRT_VERSION @PROJECT_VERSION@)
set(PDCRT_VERSION_STRING "${PDCRT_VERSION}")
set(PDCRT_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(PDCRT_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(PDCRT_VERSION_PATCH @PROJECT_VERSION_PATCH@)

@PACKAGE_INIT@

if(NOT TARGET pdcrt)
  include("${CMAKE_CURRENT_LIST_DIR}/pdcrt-targets.cmake")
endif()

get_target_property(PDCRT_INCLUDE_DIRS pdcrt_pdcrt INTERFACE_INCLUDE_DIRECTORIES)
set(PDCRT_LIBRARIES pdcrt_pdcrt)

get_target_property(PDCRT_DEFINITIONS pdcrt_pdcrt INTERFACE_COMPILE_DEFINITIONS)
get_target_property(PDCRT_COMPILE_OPTIONS pdcrt_pdcrt INTERFACE_COMPILE_OPTIONS)

get_target_property(PDCRT_LINK_DIRECTORIES pdcrt_pdcrt INTERFACE_LINK_DIRECTORIES)
get_target_property(PDCRT_LINK_OPTIONS pdcrt_pdcrt INTERFACE_LINK_OPTIONS)

set_and_check(PDCRT_ROOT "${PACKAGE_PREFIX_DIR}")

check_required_components(pdcrt)
